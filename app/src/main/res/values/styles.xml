<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:itemBackground">@color/colorAccent</item>
        <!-- To change the popup menu and app text color  -->
    </style>

    <style name="myCustomMenuTextApearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.Toolbar">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:itemBackground">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:itemBackground">@color/colorPrimaryDark</item>
    </style>

    <style name="SelectableItemThemeLight">
        <item name="colorControlHighlight">@color/colorRippleLight</item>
    </style>

    <style name="SelectableItemBackgroundLight">
        <item name="android:theme">@style/SelectableItemThemeLight</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>


</resources>
