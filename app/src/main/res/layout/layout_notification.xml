<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/ivNotiThumb"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:contentDescription="@string/no_image_loaded"
        android:padding="2dp"
        android:src="@drawable/icon_thumbnail"/>

    <LinearLayout
        android:id="@+id/llLayoutGroupButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnNotiPrev"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:contentDescription="@string/no_image_loaded"
            android:src="@drawable/ic_skip_previous_black_36dp"/>

        <ImageButton
            android:id="@+id/btnNotiPlay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:contentDescription="@string/no_image_loaded"
            android:src="@drawable/ic_play_arrow_black_36dp"/>

        <ImageButton
            android:id="@+id/btnNotiNext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:contentDescription="@string/no_image_loaded"
            android:src="@drawable/ic_skip_next_black_36dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/ivNotiThumb"
        android:layout_toLeftOf="@id/llLayoutGroupButton"
        android:layout_toRightOf="@id/ivNotiThumb"
        android:layout_toStartOf="@id/llLayoutGroupButton"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNotiTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textStyle="normal|bold"/>

        <TextView
            android:id="@+id/tvNotiArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            />
    </LinearLayout>


</RelativeLayout>