<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp">

        <ImageView
            android:id="@+id/ivAlbumThumb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/icon_thumbnail" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/ivAlbumThumb"
            android:layout_alignLeft="@id/ivAlbumThumb"
            android:layout_alignRight="@id/ivAlbumThumb"
            android:layout_alignStart="@id/ivAlbumThumb"
            android:layout_below="@id/ivAlbumThumb"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvAlbumTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:padding="5dp"
                android:text="############" />

            <TextView
                android:id="@+id/tvAlbumArtist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/ivAlbumThumb"
                android:layout_marginTop="13dp"
                android:padding="5dp"
                android:text="Adam Lambert"
                tools:ignore="NotSibling" />

            <ImageButton
                android:id="@+id/btnAlbumOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="?selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/ic_menu_black_24dp" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>